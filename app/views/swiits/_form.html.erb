<div class="mainbody">
    <p><%= notice %></p><br>
    <div class="col1">
      <p class="swiit-title">N. Swiits :<%= @swiit.id %></p>
    </div>
    <div class="col2">
      <%= form_with(model: @swiit, local: true, url: choose_new_or_edit ) do |form| %>
        <% if @swiit.errors.any? %>
        <div id="error_explanation">
          <h2><%= @swiit.errors.count %> errors founded</h2>
          <ul>
          <% @swiit.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
        <% end %>
        <div class="swiit_title">
          <%= form.label :title %>
          <%= form.text_field :title %> 
        </div>
        <div class="swiit_content">
          <%= form.label :content %>
          <%= form.text_area :content, size: "40x10" %>
        </div>
        <%= form.submit 'Post' %>
      <% end %>
    </div>
    <div class="col3">
      <table>
        <tr>
          <td><%= link_to "Swiit home", swiits_path, class: "btn-new"%></td>
        <tr>     
      </table>
    </div>    
</div>
