
<div class="container">
  <div class="navbar" id="main-navbar">
    <h1>Swiiter</h1>
  </div>
  <div class="mainbody">
    <% if @swiit.errors.any? %>
      <div id="error_explanation">
        <h2><%= @swiit.errors.count %>There are errors.</h2>
        <ul>
          <% @swiit.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <p><%= notice %></p><br>
    <div class="col1">
      <p class="swiit-user">N. Swiits :<%= @swiit.id %></p>
    </div>
    <div class="col2">
      <%= form_with(model: @swiit, local: true, url: choose_new_or_edit) do |form| %>
        <div class="swiit_content">
          <%= form.label :content %>
          <%= form.text_area :content, size: "80x10" %>
        </div>
        <%= form.submit "Post", class: "btn-D" %>
      <% end %>
    </div>
    <div class="col3">
      <table>
        <tr>
          <td><%= link_to "Swiit home", swiits_path, class: "btn-new"%></td>
        <tr>     
      </table>
    </div>    
  </div>
</div>